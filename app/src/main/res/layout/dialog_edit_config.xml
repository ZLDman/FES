<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Amplitude -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Amplitude"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#222" />

                <SeekBar
                    android:id="@+id/dialogAmpBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"/>

                <TextView
                    android:id="@+id/dialogAmpValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0mA"
                    android:gravity="end"
                    android:textColor="#333"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Frequency -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Frequency"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#222" />

                <SeekBar
                    android:id="@+id/dialogFreqBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="20"/>

                <TextView
                    android:id="@+id/dialogFreqValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="30Hz"
                    android:gravity="end"
                    android:textColor="#333"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Pulse Width -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pulse Width"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#222" />

                <SeekBar
                    android:id="@+id/dialogPowBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="50"/>

                <TextView
                    android:id="@+id/dialogPowValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0Î¼s"
                    android:gravity="end"
                    android:textColor="#333"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Stimulation Timing -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stimulation Timing"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#222"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="On Set:"
                        android:textSize="14sp"
                        android:textColor="#333" />

                    <SeekBar
                        android:id="@+id/dialogOnSetBar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:layout_weight="1"
                        android:max="10" />

                    <TextView
                        android:id="@+id/dialogOnSetValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#333" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cut Out:"
                        android:textSize="14sp"
                        android:textColor="#333" />

                    <SeekBar
                        android:id="@+id/dialogOffSetBar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:layout_weight="1"
                        android:max="10" />

                    <TextView
                        android:id="@+id/dialogOffSetValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#333" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
